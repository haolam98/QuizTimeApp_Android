<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quiztimeapp">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/quiz_time_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/quiz_time_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ShareQuizActivity"></activity>
        <activity android:name=".SaveAndChoiceActivity" />
        <activity android:name=".PreviewQuizActivity" />
        <activity android:name=".AddQuestionActivity" />
        <activity android:name=".MakeQuizActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".MainPageActivity" />
    </application>

</manifest>